<!--pages/cart/cart.wxml-->
<view wx:for="{{cart}}" wx:key="{{index}}" class='myCart'>
  <image src="{{item.img}}"/>
    <view class='wenzi'>
    <view>商品: {{item.title}}</view>
    <view>数量: <text>+</text>{{item.count}}<text>-</text></view>
    <view>价格: ${{item.price}}</view>
    <view>总价格:{{item.count*item.price}}</view>
    </view>
</view>
 