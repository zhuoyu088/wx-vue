/* pages/detail/detail.wxss */


.pic{
  border: 1px solid #dedede;
  width: 24%;
  display: flex;
  justify-content: space-around;
  height: 40px;
}
.pic image{
  width: 20px;
  height: 20px;
  float: left;
  margin-top: 10px; 

}

.tabbar{
  height: 40px;
  display: flex;
  justify-content: space-around;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
}

.tabbar .btnone{
  width: 38%;
  text-align: center;
  color: white;
  background: black;
  font-size: 12px;
  line-height: 40px;
}
.tabbar .btntwo{
  width: 38%;
  text-align: center;
  background: green;
  font-size: 12px;
  color: white;
  line-height: 40px;
}